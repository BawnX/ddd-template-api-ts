{
    "name": "typescript-api",
    "version": "0.0.1",
    "description": "template typescript express api",
    "main": "index.js",
    "scripts": {
        "start:dev": "cross-env NODE_ENV=development npm start",
        "start:qa": "cross-env NODE_ENV=qa npm start",
        "start:prod": "cross-env NODE_ENV=production.ts npm start",
        "start": "ts-node-dev --respawn apps/template/main.ts --watch --debug",
        "build:development": "cross-env NODE_ENV=development npm run build",
        "build:qa": "cross-env NODE_ENV=qa npm run build",
        "build:production": "cross-env NODE_ENV=production npm run build",
        "build": "rimraf ./dist && tsc",
        "lint:fix": "eslint --fix ./{apps,libs}/**/*.ts",
        "test": "jest --colors --runInBand",
        "test:integration": "npm test -- --watchAll -c jest-integration-config.js",
        "test:unit": "npm test -- --watchAll --noStackTrace -c jest-unit-config.js"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.14.5",
        "@babel/core": "^7.14.6",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.12",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.12.5",
        "@typescript-eslint/eslint-plugin": "^4.28.1",
        "@typescript-eslint/parser": "^4.28.1",
        "babel-plugin-transform-inline-environment-variables": "^0.4.3",
        "cross-env": "^7.0.3",
        "dotenv": "^10.0.0",
        "eslint": "^7.29.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-decorator-position": "^2.2.28",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-jest-formatting": "^3.0.0",
        "eslint-plugin-jsdoc": "^35.3.2",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-radar": "^0.2.1",
        "jest": "^27.0.6",
        "nock": "^13.1.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "class-transformer": "^0.4.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "morgan-body": "^2.6.6",
        "tslog": "^3.2.0",
        "typescript-ioc": "^3.2.2",
        "typescript-rest": "^3.0.4",
        "typescript-rest-ioc": "^1.0.1"
    }
}
